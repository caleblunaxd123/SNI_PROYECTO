
@{
    ViewBag.Title = "Hola Inicie Sesion!";

}
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<link href="~/styles/font-awesome.min.css" rel="stylesheet" />
<link href="~/styles/style.css" rel="stylesheet" />
<title>@ViewBag.Title Inicie Sesion!</title>
<!-- main -->
<div class="w3layouts-main">
    <div class="bg-layer">
        <h1>Login Sociedad Nacional de Industrias</h1>
        <div class="header-main">
            <div class="main-icon">
                <span class="fa fa-eercast"></span>
            </div>
            <div class="header-left-bottom">
                <form action="Verify" method="post">
                    <div class="icon1">
                        <span class="fa fa-user"></span>
                        <input type="text" name="Name" placeholder="Ingrese su usuario" required="" />
                    </div>
                    <div class="icon1">
                        <span class="fa fa-lock"></span>
                        <input type="password" name="Password" placeholder="Ingrese su contraseña" required="" />
                    </div>
                    <div class="login-check">
                        <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Guardar sesión</label>
                    </div>
                    <div class="bottom">
                        <button class="btn">Log In</button>
                    </div>
                    <div class="links">
                        <p><a href="#">Olvido su contraseña?</a></p>
                        <p class="right"><a href="@Url.Action("Create","Account")">Nuevo usuario? Registro</a></p>
                        <div class="clear"></div>
                    </div>
                </form>
            </div>
            <div class="social">
                <ul>
                    <li>o inicia usando : </li>
                    <li><a href="https://es-la.facebook.com/login/" target="_blank" class="facebook"><span class="fa fa-facebook"></span></a></li>
                    <li><a href="https://twitter.com/login" target="_blank" class="twitter"><span class="fa fa-twitter"></span></a></li>
                    <li><a href="https://gmail.com/" class="google" target="_blank"><span class="fa fa-google-plus"></span></a></li>
                </ul>
            </div>
        </div>

        <!-- copyright -->
        <div class="copyright">
            <p>© 2020 Login SNI . All rights reserved | Design by <a href="http://sni.com" target="_blank">Sociedad Nacional de Industrias</a></p>
        </div>
        <!-- //copyright -->
    </div>
</div>
<!-- //main -->
